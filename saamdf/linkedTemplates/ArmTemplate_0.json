			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "WaitDuration",
						"type": "Wait",
						"dependsOn": [],
						"userProperties": [],
						"typeProperties": {
							"waitTimeInSeconds": {
								"value": "@pipeline().parameters.waitperiod",
								"type": "Expression"
							}
						}
					},
					{
						"name": "ImportCustomerData",
						"type": "Copy",
